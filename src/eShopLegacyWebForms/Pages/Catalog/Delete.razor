@page "/Catalog/Delete"
@layout Site
@inherits eShopLegacyWebForms.Catalog.Delete
<!-- Conversion of Title attribute (value: "Delete") for Page directive not currently supported -->
<!-- Conversion of AutoEventWireup attribute (value: "true") for Page directive not currently supported -->
<h2 class="esh-body-title">
    Delete
</h2>
<div class="container">
    <h3>
        Are you sure you want to delete this?
    </h3>
    <div class="row">
        @* The following tag is not supported: <asp:Image runat="server" CssClass="col-md-6 esh-picture" ImageUrl='@("/Pics/" + productToDelete.PictureFileName)'> *@@* </asp:Image> *@
        <dl class="col-md-6 dl-horizontal">
            <dt>
                Name
            </dt>
            <dd>
                <label>
                    @(productToDelete.Name)
                </label>
            </dd>
            <dt>
                Description
            </dt>
            <dd>
                <label>
                    @(productToDelete.Description)
                </label>
            </dd>
            <dt>
                Brand
            </dt>
            <dd>
                <label>
                    @(productToDelete.CatalogBrand.Brand)
                </label>
            </dd>
            <dt>
                Type
            </dt>
            <dd>
                <label>
                    @(productToDelete.CatalogType.Type)
                </label>
            </dd>
            <dt>
                Price
            </dt>
            <dd>
                <label class="esh-price">
                    @(productToDelete.Price)
                </label>
            </dd>
            <dt>
                Picture name
            </dt>
            <dd>
                <label>
                    @(productToDelete.PictureFileName)
                </label>
            </dd>
            <dt>
                Stock
            </dt>
            <dd>
                <label>
                    @(productToDelete.AvailableStock)
                </label>
            </dd>
            <dt>
                Restock
            </dt>
            <dd>
                <label>
                    @(productToDelete.RestockThreshold)
                </label>
            </dd>
            <dt>
                Max stock
            </dt>
            <dd>
                <label>
                    @(productToDelete.MaxStockThreshold)
                </label>
            </dd>
            <dt></dt>
            <dd class="text-right esh-button-actions">
                <a runat="server" href="~" class="btn esh-button esh-button-secondary">
                    [ Cancel ]
                </a>
                <button class="btn esh-button esh-button-primary" @onclick="(args) => Delete_Click(null, args)">
                    [ Delete ]
                </button>
            </dd>
        </dl>
    </div>
    @* <div class="form-actions no-color esh-link-list">
            <a runat="server" href="~" class="esh-link-item">Back to list
            </a>
        </div> *@
</div>